      <!-- View Form Agreement -->
    <record model="ir.ui.view" id="collective_agreement_form">
      <field name="name">collective.agreement.form</field>
      <field name="model">collective.agreement</field>
      <field name="arch" type="xml">
        <form string="Collective Agreement">
            <sheet>
            <div class="oe_title">
                <label for="name" class="oe_edit_only"/>
                <h1><field name="name" placeholder="Document Name" required="True"/></h1>
            </div>
            <group>
                <group name="credentials">
                    <field name="contract_hours" required="True"/>
                    <field name="net_salary" required="True"/>
                    <field name="brut_salary"/>
                </group>
                <group name="clients">
                    <field name="category_professional_id" required="True"/>
                    <field name="cotization_id" required="True"/>
                    <field name="educational_level_id" required="True"/>
                    <field name="formation_job_id" required="True"/>
                </group>
                <group name="others">
                    <field name="tag_cnae_id"/>
                    <field name="sector_cnae"/>
                </group>
            </group>
            <notebook>
                <page string="Data Agreement">
                    <group name="others">
                        <field name="description" placeholder=".....Description"/>
                    </group>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </page>
            </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
      </field>
