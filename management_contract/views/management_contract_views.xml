<odoo>
  <data>

    <!--Contract form inherit-->
    <record id="hr_management_contract_view_form" model="ir.ui.view">
        <field name="name">hr.management.contract.view.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position='before'>
                <button name="action_request_registration" string="Register discharge SS" type="object" class="btn-primary" attrs="{'invisible':[('state','!=','draft')]}"/>
                <button name="action_approve" string="Register withdrawal SS" type="object" class="btn-primary" attrs="{'invisible':[('state','!=','valid')]}"/>
                <button name="action_disapprove" string="Cancel" type="object" attrs="{'invisible':[('state','=','cancel')]}"/>
                <button name="action_reset_to_new" string="Set draft" type="object" attrs="{'invisible':[('state','=','draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="before">
                <field name="type_doc" string="Type document" required="True" invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="options">{"no_create": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="domain">[('empl_ett', '=', True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="before">
                <label for="partner_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                <div name="data_client" class="o_row" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                    <field name="cif_client" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/> -
                    <field name="partner_id" domain="[('is_company', '=', True)]" options='{"no_create": True}' attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                </div>
                <label for="cc_nass_code" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                <div name="data_client" class="o_row" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                    <field name="cc_nass_code" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/> -
                    <field name="cc_nass_number" domain="[('is_company', '=', True)]" options='{"no_create": True}' attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="doc_ident" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                <field name="job_seeker" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                <field name="quotation_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}" options='{"no_create": True}'/>
                <field name="team_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}" options='{"no_create": True}'/>
                <field name="contract_hours" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="attributes">
              <attribute name="attrs">{'invisible': [('type_doc', '!=', 'ctt_employee')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='type_id']" position="after">
                <field name="agreement_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}"/>
                <field name="category_professional_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}"/>
                <field name="cotization_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}"/>
                <field name="educational_level_id" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')], 'required': [('type_doc', '!=', 'ctt_employee')]}"/>
            </xpath>
            <xpath expr="//field[@name='wage']" position="after">
                <field name="type_retribution" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
            </xpath>
            <xpath expr="//group[@name='duration_group']" position="after">
                <group name="registration" string="Register data" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                    <label for="registration_date" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <div name="data_wage" class="o_row" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                        <field name="registration_date" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/> -
                        <field name="termination_date" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    </div>
                    <field name="termination_cause" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="ctt_assumption" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                </group>
                <group name="inem" string="Management SS" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                    <label for="time_execution" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <div name="data_wage" class="o_row" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                        <field name="abred_code" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/> -
                        <field name="time_execution" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    </div>
                    <label for="registration_finger" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <div name="data_wage" class="o_row" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                        <field name="registration_finger" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/> -
                        <field name="termination_finger" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    </div>
                    <field name="code_inem" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="notification_inem" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                </group>
                <field name="obj_control_ctto" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
            </xpath>
            <xpath expr="//group[@name='salary_and_advantages']" position="after">
                <group name="Allowance" string="Monthly Allowance in Cash" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}">
                    <field name="accom" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="trans" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="mobi" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="food" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                    <field name="nature" attrs="{'invisible': [('type_doc', '=', 'ctt_employee')]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('type_doc', '!=', 'ctt_employee')]}</attribute>
            </xpath>
            <xpath expr="//page[2]" position="attributes">
                <attribute name="attrs">{'invisible': [('type_doc', '!=', 'ctt_employee')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='advantages']" position="attributes">
                <attribute name="attrs">{'invisible': [('type_doc', '!=', 'ctt_employee')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,valid,done,cancel</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="clickable">False</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,valid,done,cancel"/>
            </xpath>
        </field>
    </record>

    <!-- view Contract tree new -->
    <record id="hr_management_contract_view_tree" model="ir.ui.view">
      <field name="name">hr.management.contract.tree</field>
      <field name="model">hr.contract</field>
      <field name="arch" type="xml">
        <tree string="Contracts" decoration-muted="state=='cancel'" decoration-danger="state in ('draft') and date_end &lt; current_date" decoration-primary="state=='draft'">
            <field name="name"/>
            <field name="type_doc" invisible="True"/>
            <field name="date_end" invisible="True"/>
            <field name="partner_id"/>
            <field name="cif_client"/>
            <field name="employee_id"/>
            <field name="doc_ident"/>
            <field name="quotation_id"/>
            <field name="team_id"/>
            <field name="contract_hours"/>
            <field name="wage"/>
            <field name="registration_date"/>
            <field name="termination_date"/>
            <field name="state"/>
        </tree>
      </field>
    </record>

      <!-- View Search Contract new -->
    <record id="hr_management_contract_view_search" model="ir.ui.view">
      <field name="name">hr.management.contract.search</field>
      <field name="model">hr.contract</field>
      <field name="arch" type="xml">
        <search string="Contracts">
            <field name="name"/>
            <field name="partner_id"/>
            <field name="cif_client"/>
            <field name="employee_id"/>
            <field name="doc_ident"/>
            <field name="quotation_id"/>
            <field name="team_id"/>
            <field name="contract_hours"/>
            <field name="wage"/>
            <field name="registration_date"/>
            <field name="termination_date"/>
            <field name="state"/>
            <separator/>
            <filter string="New" domain="[('state', '=', 'draft')]" name="draft"/>
            <filter string="Valid" domain="[('state', '=', 'valid')]" name="open"/>
            <filter string="Done" domain="[('state', '=', 'done')]" name="done"/>
            <filter string="Cancelled" domain="[('state', '=', 'cancel')]" name="cancel"/>
            <separator/>
            <group  expand='0' string='Group by...'>
                <filter string='Team' context="{'group_by': 'team_id'}"/>
                <filter string='State' context="{'group_by': 'state'}"/>
            </group>
        </search>
      </field>
    </record>

