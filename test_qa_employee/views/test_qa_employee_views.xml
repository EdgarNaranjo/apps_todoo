              <filter string='Location' domain="[]" context="{'group_by': 'note_location'}"/>
            </group>
            <group  expand='0' string='Group by...'>
              <filter string='Requirement' domain="[]" context="{'group_by': 'note_requirement'}"/>
            </group>
            <group  expand='0' string='Group by...'>
              <filter string='Holiday' domain="[]" context="{'group_by': 'note_holiday'}"/>
